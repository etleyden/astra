{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "paths": {
      "controllers": ["../controllers/*"]
    }
  },
  "references": [{ "path": "../controllers" }],
  "include": ["src"]
}
