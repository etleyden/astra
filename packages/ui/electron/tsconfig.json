{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "../dist-electron", // or wherever you want compiled code
    "rootDir": ".",               // points to your `electron/` directory
    "moduleResolution": "Node",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["main.ts"],          // or all files: ["**/*.ts"]
  "exclude": ["node_modules"]
}