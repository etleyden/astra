{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "address": "localhost",
      "localRoot": "${workspaceFolder}/packages/api",
      "remoteRoot": "/app/packages/api",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}
